<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imgstyle="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/grid_item_width"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@color/transparent">


    <com.huangjie.demo.ui.view.ShapeImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/grid_item_inner_top_margin"
        android:id="@+id/grid_item_img"
        android:layout_width="@dimen/grid_item_img_width"
        android:layout_height="@dimen/grid_item_img_height"
        imgstyle:image_shape= "circle"
        android:scaleType="fitXY" />

    <TextView xmlns:tools="http://schemas.android.com/tools"
        android:layout_gravity="center_horizontal"
        android:id="@+id/grid_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_item_title_top_margin"
        android:gravity="center"
        android:textColor="@color/color_FF1D2023"
        android:textSize="@dimen/grid_item_title_size"
        tools:text="hello world" />


    <ImageView
        android:visibility="gone"
        android:src="@drawable/grid_del_button"
        android:layout_gravity="right"
        android:id="@+id/grid_item_del_btn"
        android:layout_width="@dimen/grid_item_del_btn_width"
        android:layout_height="@dimen/grid_item_del_btn_width"
        android:scaleType="fitXY" />
</FrameLayout>